// SuperCollider key bindings for Zed - VS Code/Cursor Compatible Edition.
// Uses Cmd+Shift prefix to avoid conflicts with standard editor shortcuts.
// Copy or merge into your personal keymap (~/.config/zed/keymap.json).
//
// For SC IDE-native keybindings (Cmd+., Cmd+B, etc.), use keymap.json instead.
[
  // ============================================================
  // SuperCollider files (.sc, .scd)
  // ============================================================
  {
    "context": "Editor && (extension == sc || extension == scd)",
    "bindings": {
      // === Code Evaluation ===
      "cmd-shift-enter": ["task::Spawn", { "task_name": "SC: Evaluate Selection" }],

      // === Stop (CRITICAL) ===
      // Escape - intuitive panic button, SC IDE uses this on Windows/Linux
      "escape": ["task::Spawn", { "task_name": "SC: Stop (CmdPeriod)" }],

      // === Server Control ===
      "cmd-shift-b": ["task::Spawn", { "task_name": "SC: Boot Server" }],
      "cmd-shift-q": ["task::Spawn", { "task_name": "SC: Quit Server" }],

      // === Recompile ===
      "cmd-shift-r": ["task::Spawn", { "task_name": "SC: Recompile" }],

      // === Help ===
      "cmd-shift-d": ["task::Spawn", { "task_name": "SC: Help (Browser)" }]
    }
  }
]
